<script type="text/javascript">
  $(function() {
     $('#flash').hide().delay(500).fadeIn('normal', function() {
        $(this).delay(2500).fadeOut();
     });
  });
</script>

<% flash.each do |type, msg| %>
  <div id="flash" class="alert alert-<%= type %>" role="alert">
    <%= msg %>
  </div>
<% end %>
