<h1>Users</h1>
<table class="table">
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Surname</th>
    <th>email</th>
    <th>Agent ID</th>
    <th></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.agent_id %></td>
      <td><%= link_to "show", user_path(user) %></td>
      <td>
        <% if user.id == current_user.id %>
          <%= link_to "edit", edit_user_path(user) %>
        <% elsif current_user.admin? %>
          <%= link_to "delete", users_path, method: :delete,
            data: { confirm: "Are you sure?" },
            style: "color:red;" %>
        <% else %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
